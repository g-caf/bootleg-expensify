{
  "manifest_version": 3,
  "name": "Expense Gadget",
  "version": "1.0",
  "description": "Automatically process and organize expense receipts",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://bootleg-expensify.onrender.com/*",
    "https://*.onrender.com/*",
    "https://www.googleapis.com/*"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open Expense Gadget"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "test-popup.html",
    "default_title": "Expense Gadget"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },


  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["pdf.min.js", "pdf.worker.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
